<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Onboard3Fragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/onboardsvg3"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginStart="39.86dp"
        android:layout_marginEnd="53.14dp"
        android:text="Real-time Tracking"
        style="@style/OnboardText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Track your packages/items from the comfort of your home till final destination"
        android:layout_marginTop="17dp"
        style="@style/OnboardText2"
        android:layout_marginStart="44.86dp"
        android:layout_marginEnd="44.14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonsignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="21dp"
        android:text="Sign Up"
        style="@style/OnboardButtonText3"
        android:background="@drawable/btn_onboard3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonsignup">

        <TextView
            android:id="@+id/textView7"
            style="@style/OnboardText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textsignin"
            style="@style/OnboardText4"
            android:backgroundTint="@color/white"
            android:textAlignment="textStart"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="Sign in"

            android:textAllCaps="false"
            android:outlineProvider="none"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>